{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./public", // Specify the output directory as public
      "rootDir": "./src",  // Specify your source directory if needed
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      // other options...
    },
    "include": ["src/**/*"], // Include all TypeScript files in the src directory
    "exclude": ["node_modules"] // Exclude the node_modules directory
  }
  